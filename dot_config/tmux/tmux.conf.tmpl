{{- if eq .chezmoi.os "darwin" }}
# macOS specific plugins
{{- else }}
# Linux specific plugins
set -g @plugin 'fcsonline/tmux-thumbs'
{{- end }}

# ===== ROSE PINE THEME CONFIGURATION =====
set -g @plugin 'rose-pine/tmux'
set -g @plugin 'tmux-plugins/tmux-battery'

# Configure Rose Pine
set -g @rose_pine_variant 'main' # Options are 'main', 'moon', 'dawn'
{{- if (index . "work" | default false) }}
# Work machine visual indicators with nerd font icons
set -g @rose_pine_host 'on'
set -g @rose_pine_show_current_program 'on'
set -g @rose_pine_left_separator '  '
set -g @rose_pine_right_separator '  '
set -g @rose_pine_field_separator ' │ '
set -g @rose_pine_status_left '   WORK'
{{- else }}
set -g @rose_pine_host 'off'
set -g @rose_pine_status_left ''
{{- end }}
set -g @rose_pine_date_time '%H:%M'
set -g @rose_pine_user 'off'
set -g @rose_pine_directory 'on'
set -g @rose_pine_bar_bg_disable 'on'
set -g @rose_pine_bar_bg_disabled_color_option 'default'

# ===== PLUGIN CONFIGURATIONS =====
# tmux-sessionx
set -g @sessionx-bind 'o'
set -g @sessionx-window-height '85%'
set -g @sessionx-window-width '75%'

# tmux-resurrect
set -g @resurrect-strategy-nvim 'session'
set -g @resurrect-capture-pane-contents 'on'
set -g @resurrect-save-shell-history 'on'
set -g @resurrect-processes 'nvim vim php node npm composer symfony'

# tmux-continuum
set -g @continuum-restore 'on'
set -g @continuum-save-interval '10'
{{- if eq .chezmoi.os "darwin" }}
set -g @continuum-boot 'on'
set -g @continuum-boot-options 'iterm'
{{- end }}

# tmux-yank
{{- if eq .chezmoi.os "darwin" }}
set -g @yank_selection 'clipboard'
set -g @yank_selection_mouse 'clipboard'
{{- else }}
set -g @yank_selection 'primary'
set -g @yank_selection_mouse 'clipboard'
{{- end }}

{{- if ne .chezmoi.os "darwin" }}
# tmux-thumbs (Linux)
set -g @thumbs-key F
set -g @thumbs-alphabet dvorak-homerow
set -g @thumbs-reverse enabled
set -g @thumbs-unique enabled
{{- end }}

{{- if (index . "work" | default false) }}
# ===== WORK MACHINE CUSTOM STATUS BAR =====
# Override status bar for work machine with distinctive styling
set -g status-style 'bg=#ff6b6b,fg=#ffffff'  # Red background for work machine
set -g status-left-length 50
set -g status-right-length 100
set -g status-left '#[bg=#ff6b6b,fg=#ffffff,bold]   WORK #[bg=#191724,fg=#ff6b6b]'
set -g status-right '#[fg=#ff6b6b,bg=#191724]#[bg=#ff6b6b,fg=#ffffff] %H:%M #[bg=#ff6b6b,fg=#ffffff,bold] %d/%m '

# Window status format for work machine
set -g window-status-current-format '#[fg=#ff6b6b,bg=#191724]#[bg=#ff6b6b,fg=#ffffff,bold] #I: #W #[fg=#ff6b6b,bg=#191724]'
set -g window-status-format '#[fg=#6e6a86,bg=#191724] #I: #W '
{{- end }}

# ===== LOCAL CONFIGURATION =====
# Include local configuration if it exists
if-shell "test -f ~/.tmux.conf.local" "source ~/.tmux.conf.local"

# ===== INITIALIZE TPM =====
# Auto-install TPM if not present
if-shell "test ! -d ~/.config/tmux/.tmux/plugins/tpm" \
   "run 'git clone https://github.com/tmux-plugins/tpm ~/.config/tmux/.tmux/plugins/tpm && ~/.config/tmux/.tmux/plugins/tpm/bin/install_plugins'"

# Initialize plugin manager (keep at the very bottom)
run '~/.config/tmux/.tmux/plugins/tpm/tpm'
