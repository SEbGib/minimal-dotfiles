# Modern tmux configuration with Rose Pine theme
# Based on Sin-cy/dotfiles structure with Rose Pine integration
# Hostname: {{ .chezmoi.hostname }}
# OS: {{ .chezmoi.os }}

# ===== BASIC SETTINGS =====
# Enable true color support
set -g default-terminal "tmux-256color"
{{- if eq .chezmoi.os "darwin" }}
set -ag terminal-overrides ",xterm-256color:RGB"
set -gq allow-passthrough on
{{- else }}
set -ga terminal-overrides ",*256col*:Tc"
set -ga terminal-overrides '*:Ss=\E[%p1%d q:Se=\E[ q'
set-environment -g COLORTERM "truecolor"
{{- end }}

# Environment variables for Neovim
set-environment -g EDITOR "nvim"
set-environment -g VISUAL "nvim"

# Start windows and panes at 1
set -g base-index 1
set -g pane-base-index 1
set -g renumber-windows on

# Prefix key
set-option -g prefix C-b
set-option -g prefix2 none

# Performance settings
set -g mouse on
set -g history-limit 100000
set -g display-time 2000
set -g status-interval 1
set -g focus-events on
set -g aggressive-resize on

# Escape time: balance between Vim responsiveness and SSH stability
# 0 = optimal for local Vim, but can cause issues over SSH
# 10 = good compromise for SSH usage while maintaining Vim performance
{{- if (index . "work" | default false) }}
set -sg escape-time 10    # SSH-optimized value for work machine
{{- else }}
set -sg escape-time 10    # Safe default for all environments
{{- end }}
set -g repeat-time 600

# ===== AUTOMATIC WINDOW RENAMING =====
# Enable automatic window renaming based on directory and git branch
set -g automatic-rename on
set -g automatic-rename-format '#{b:pane_current_path}'

# Use custom script for intelligent window naming (dir/branch format)
# Hook runs on pane focus, directory change, and periodic intervals
set-hook -g after-select-pane 'run-shell "~/.local/bin/tmux-auto-rename"'
set-hook -g pane-focus-in 'run-shell "~/.local/bin/tmux-auto-rename"'

# Also run on window creation
set-hook -g window-linked 'run-shell "~/.local/bin/tmux-auto-rename"'

# ===== KEY BINDINGS =====
# Reload config
unbind r
bind r source-file ~/.config/tmux/tmux.conf \; display "  Config reloaded!"

# Split windows
unbind %
bind - split-window -h -c "#{pane_current_path}"
unbind '"'
bind _ split-window -v -c "#{pane_current_path}"

# Copy mode
unbind v
bind v copy-mode

# Resize panes with hjkl
bind -r j resize-pane -D 5
bind -r k resize-pane -U 5
bind -r l resize-pane -R 5
bind -r h resize-pane -L 5

# Additional navigation for AZERTY/French keyboards
# Alternative pane navigation (prefix + arrow keys)
bind -r Up select-pane -U
bind -r Down select-pane -D
bind -r Left select-pane -L
bind -r Right select-pane -R

# AZERTY-specific hjkl alternatives (prefix + keys)
bind -r H select-pane -L
bind -r J select-pane -D
bind -r K select-pane -U
bind -r L select-pane -R

# Maximize panes
bind -r m resize-pane -Z

# New session
bind-key n command-prompt "new-session -s '%%'"

# Session fuzzy finder
bind-key -r f run-shell "tmux neww ~/.config/tmux/scripts/tmux-sessionizer"

{{- if (index . "work" | default false) }}
# Work machine specific sessions
bind-key W new-window -n 'dev' 'nvim'
bind-key S new-window -n 'shell'
bind-key L new-window -n 'logs' 'tail -f /var/log/syslog'
{{- end }}

# ===== DEVELOPMENT TOOLS POPUPS =====
# IMPORTANT: Keybindings chosen to avoid conflicts with default tmux bindings
# Avoided: 'd' (detach-client), 'b' (last-window)

# Lazygit popup (prefix + g)
bind-key g display-popup -d '#{pane_current_path}' -w 95% -h 95% -E lazygit

# Lazydocker popup (prefix + @) - Chosen to avoid conflict with 'd' (detach)
# On AZERTY keyboard: Shift + à
bind-key @ display-popup -w 95% -h 95% -E lazydocker

# Rainfrog database TUI popup (prefix + Shift+B)
# Uppercase B avoids conflict with 'b' (last-window)
bind-key B display-popup -w 95% -h 95% -E rainfrog

# Development tools menu (prefix + T for "Tools")
bind-key T display-menu -T "#[align=centre]   Development Tools" -x C -y C \
    "  Lazygit (current dir)" g "display-popup -d '#{pane_current_path}' -w 95% -h 95% -E lazygit" \
    "  Lazydocker" @ "display-popup -w 95% -h 95% -E lazydocker" \
    "  Rainfrog (database)" B "display-popup -w 95% -h 95% -E rainfrog" \
    "" \
    "  htop" h "display-popup -w 80% -h 80% -E htop" \
    "  File browser (ranger)" r "display-popup -d '#{pane_current_path}' -w 95% -h 95% -E ranger"

# ===== VIM MODE SETTINGS =====
set-window-option -g mode-keys vi
bind-key -T copy-mode-vi 'v' send -X begin-selection
bind-key -T copy-mode-vi 'y' send -X copy-selection

# Clipboard integration
{{- if eq .chezmoi.os "darwin" }}
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "pbcopy"
bind-key -T copy-mode-vi Enter send-keys -X copy-pipe-and-cancel "pbcopy"
{{- else }}
bind-key -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "xclip -selection clipboard"
bind-key -T copy-mode-vi Enter send-keys -X copy-pipe-and-cancel "xclip -selection clipboard"
{{- end }}

# Disable mouse drag end
unbind -T copy-mode-vi MouseDragEnd1Pane

